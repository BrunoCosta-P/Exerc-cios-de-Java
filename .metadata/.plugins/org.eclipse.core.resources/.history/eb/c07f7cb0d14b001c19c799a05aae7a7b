
public class TestaCaracteres {
	public static void main(String [] args) {
		char letra = 'a';
		
		System.out.print(letra);
		
		char valor= 66;
		System.out.print(valor);
		
		valor = (char) (valor + 1);
		System.out.print(valor);
		
		String palavra = "oi olá vamos pasear em ";
		System.out.print(palavra);
		
		palavra = palavra + 2020;
		System.out.print(palavra);
	}
}
